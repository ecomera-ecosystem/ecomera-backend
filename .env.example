# ==========================================
# ECOMERA - Environment Variables (TEMPLATE)
# ==========================================

# ---------------------------
# Database Configuration
# ---------------------------
DB_USER=your_db_user
DB_PASS=your_db_password
DB_NAME=ecomera
DB_HOST=localhost
DB_PORT=5432
DB_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}
DB_DRIVER=org.postgresql.Driver
DB_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# ---------------------------
# Redis Configuration
# ---------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# ---------------------------
# Spring Profiles
# ---------------------------
SPRING_PROFILES_ACTIVE=dev
DDL_AUTO=update

# ---------------------------
# Security (Basic Auth)
# ---------------------------
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=change_me

# ---------------------------
# JWT Configuration
# ---------------------------
# Secret key (use a strong random value, base64 recommended)
JWT_SECRET_KEY=change_me_to_a_secure_random_key
JWT_EXPIRATION_TIME=86400000        # 1 day in milliseconds
REFRESH_EXPIRATION_TIME=604800000   # 7 days in milliseconds
