# ==========================================
# ECOMERA - Docker Environment Variables
# ==========================================

# ---------------------------
# Database Configuration
# ---------------------------
DB_USER=postgres
DB_PASS=change_me
DB_NAME=ecomera
# IMPORTANT: Use service name 'postgres', not 'localhost'
DB_URL=jdbc:postgresql://postgres:5432/ecomera
DB_DRIVER=org.postgresql.Driver
DB_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# ---------------------------
# Redis Configuration
# ---------------------------
# IMPORTANT: Use service name 'redis', not 'localhost'
REDIS_HOST=redis
REDIS_PORT=6379

# ---------------------------
# Spring Profiles
# ---------------------------
SPRING_PROFILES_ACTIVE=docker
DDL_AUTO=none

# ---------------------------
# Security (Basic Auth)
# ---------------------------
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=admin

# ---------------------------
# JWT Configuration
# ---------------------------
# Secret key (use a strong random value, base64 recommended)
JWT_SECRET_KEY=change_me_to_a_secure_key
JWT_EXPIRATION_TIME=86400000
REFRESH_EXPIRATION_TIME=604800000

# ---------------------------
# Liquibase
# ---------------------------
LIQUIBASE_ENABLED=true